<style>
    .chessboard {
    display: grid;
    grid-template-columns: repeat(8, minmax(0, 1fr));
    grid-template-rows: repeat(8, minmax(0, 1fr));
    width: 100%;
    max-width: 400px;
    height: auto;
    aspect-ratio: 1 / 1;
    transform: rotate(0deg);
    margin: 0 auto;
    border: 5px solid #333;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    transition: transform 0.5s ease;
}

.piece.white {
    color: white;
    filter: drop-shadow(0 0 2px rgba(0, 0, 0, 1));
}

.piece.black {
    color: black;
}

.flipped {
    transform: rotate(180deg);
}

.square {
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color 0.3s ease;
}

.square.light {
    background-color: #f0d9b5;
}

.square.dark {
    background-color: #b58863;
}

.piece {
    font-size: 2.5vw; /* Adjust size dynamically */
    max-font-size: 36px;
    cursor: pointer;
    user-select: none;
    transition: transform 0.2s ease, opacity 0.2s ease;
}

.piece.draggable {
    cursor: grab;
}

.dragging {
    opacity: 0.5;
}

.flipped .piece {
    transform: rotate(180deg);
}

/* Ensure chessboard scales on smaller screens */
@media (max-width: 600px) {
    .chessboard {
        max-width: 300px;
        border-width: 3px;
    }

    .piece {
        font-size: 4vw;
    }
}

    </style>
</head>
<body>
    <div class="w-full h-screen bg-zinc-900 flex items-center justify-center">
        <div class="chessboard w-96 h-96 bg-zinc-500 ">

        </div>
    </div>

